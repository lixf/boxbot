<Page
    x:Class="BoxBotAlpha.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BoxBotAlpha"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#AEAEAE">

    <Page.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="FriendsListTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- user profile pic -->
                    <Image Source="/Shared/ShellContent/overworld.png" Stretch="UniformToFill"/>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top HP Status Bar -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="14"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="14"/>
            </Grid.RowDefinitions>
            <Image Source="/Shared/ShellContent/TEdge.png" Grid.Row="0" Grid.Column="0"/>
            <Image Source="/Shared/ShellContent/LEdge.png" Grid.Row="0" Grid.Column="0"/>
            <Image Source="/Shared/ShellContent/TEdge.png" Grid.Row="0" Grid.Column="2"/>
            <Image Source="/Shared/ShellContent/REdge.png" Grid.Row="0" Grid.Column="2"/>
            <Image Source="/Shared/ShellContent/BLCorner.png" Grid.Row="2" Grid.Column="0"/>
            <Image Source="/Shared/ShellContent/BRCorner.png" Grid.Row="2" Grid.Column="2"/>

            <Image Source="/Shared/ShellContent/TEdge.png" Grid.Row="0" Grid.Column="1" Stretch="Fill"/>
            <Image Source="/Shared/ShellContent/LEdge.png" Grid.Row="1" Grid.Column="0" Stretch="Fill"/>
            <Image Source="/Shared/ShellContent/REdge.png" Grid.Row="1" Grid.Column="2" Stretch="Fill"/>
            <Image Source="/Shared/ShellContent/BEdge.png" Grid.Row="2" Grid.Column="1" Stretch="Fill"/>
            
            <!-- Header Content -->
            <Grid Grid.Row="1" Grid.Column="1" Margin="-3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="4"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="4"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- username -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="d337er" Foreground="#212121" FontSize="24" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,4"/>
                    <!-- health -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="HP" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" FontSize="20" FontWeight="Black" Foreground="#212121" Height="20" HorizontalAlignment="Center"/>
                    <Rectangle Stroke="#212121" StrokeThickness="2" Grid.Column="1" Grid.Row="1" Fill="Transparent" Margin="4,0,10,0"/>
                    <Rectangle Stroke="Transparent" StrokeThickness="8" Grid.Column="1" Grid.Row="1" Fill="#212121" Margin="4,0,10,0" HorizontalAlignment="Left" Width="200"/>
                    <!-- experience -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="XP" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" FontSize="20" FontWeight="Black" Foreground="#212121" Height="20" HorizontalAlignment="Center"/>
                    <Rectangle Stroke="#212121" StrokeThickness="2" Grid.Column="1" Grid.Row="3" Fill="Transparent" Margin="4,0,10,0"/>
                    <Rectangle Stroke="Transparent" StrokeThickness="8" Grid.Column="1" Grid.Row="3" Fill="#212121" Margin="4,0,10,0" HorizontalAlignment="Left" Width="100"/>
                    <!-- level -->
                    <TextBlock Grid.Row="0" Grid.Column="2" Grid.RowSpan="4" Text="LVL.03" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" FontSize="40" FontWeight="Black" Foreground="#212121"/>
                </Grid>
            </Grid>
        </Grid>
        
        <!-- Content Area -->
        <Grid Margin="0,5,0,0" Grid.Row="1">

            <!-- Maps -->
            <Grid x:Name="MapView" Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="14"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="14"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="14"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="14"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="1" Grid.Column="1" Margin="-4" Source="/Shared/ShellContent/overworld.png" Stretch="UniformToFill" Opacity="0.75"/>

                    <Image Grid.Row="0" Grid.Column="1" Source="/Shared/ShellContent/window_horiz.png" Stretch="Fill" Margin="-5,0"/>
                    <Image Grid.Row="2" Grid.Column="1" Source="/Shared/ShellContent/window_horiz.png" Stretch="Fill" Margin="-5,0"/>
                    <Image Grid.Row="1" Grid.Column="0" Source="/Shared/ShellContent/window_vert.png" Stretch="Fill" Margin="0,-5"/>
                    <Image Grid.Row="1" Grid.Column="2" Source="/Shared/ShellContent/window_vert.png" Stretch="Fill" Margin="0,-5"/>

                    <Image Grid.Row="0" Grid.Column="0" Source="/Shared/ShellContent/window_corner.png"/>
                    <Image Grid.Row="0" Grid.Column="2" Source="/Shared/ShellContent/window_corner.png"/>
                    <Image Grid.Row="2" Grid.Column="0" Source="/Shared/ShellContent/window_corner.png"/>
                    <Image Grid.Row="2" Grid.Column="2" Source="/Shared/ShellContent/window_corner.png"/>
                </Grid>
            </Grid>
            
            <!-- Home -->
            <Grid x:Name="HomeView" Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="14"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="14"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="14"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="14"/>
                    </Grid.RowDefinitions>

                    <!-- bot view -->
                    <Grid Grid.Row="1" Grid.Column="1" Margin="-4">
                        <Rectangle Fill="#AEAEAE" Opacity="0.85"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Bot -->
                            <Grid Grid.Column="0" Grid.Row="1" Margin="10,0,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid.Resources>
                                        <Storyboard x:Name="homeBotBounceStoryboard">
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Y"
                                                Storyboard.TargetName="homeBotY"
                                                AutoReverse="True" To="-10" Duration="0:0:0.5" RepeatBehavior="Forever">
                                                <DoubleAnimation.EasingFunction>
                                                    <ExponentialEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Opacity"
                                                Storyboard.TargetName="homeShadow"
                                                AutoReverse="True" From="1.00" To="0.75" Duration="0:0:0.5" RepeatBehavior="Forever">
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                Storyboard.TargetName="homeShrinkBoxL"
                                                Storyboard.TargetProperty="(Rectangle.Width)"
                                                EnableDependentAnimation="True"
                                                AutoReverse="True" From="30" To="50" Duration="0:0:0.5" RepeatBehavior="Forever">
                                                <DoubleAnimation.EasingFunction>
                                                    <ExponentialEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                Storyboard.TargetName="homeShrinkBoxR"
                                                Storyboard.TargetProperty="Width"
                                                EnableDependentAnimation="True"
                                                AutoReverse="True" From="30" To="50" Duration="0:0:0.5" RepeatBehavior="Forever">
                                                <DoubleAnimation.EasingFunction>
                                                    <ExponentialEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </Grid.Resources>

                                    <Grid x:Name="HomeBotView" Grid.Row="0">
                                        <Grid.RenderTransform>
                                            <TranslateTransform x:Name="homeBotY" Y="5"/>
                                        </Grid.RenderTransform>
                                        <Rectangle x:Name="homeBot" Grid.Row="0" Fill="#212121" VerticalAlignment="Bottom" Width="80" Height="80"/>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Rectangle Fill="Transparent" x:Name="homeShrinkBoxL" Height="30" Width="50" Grid.Column="0"/>
                                        <Rectangle Fill="Transparent" x:Name="homeShrinkBoxR" Height="30" Width="50" Grid.Column="2"/>
                                        <Image x:Name="homeShadow" Grid.Column="1" Source="/Shared/ShellContent/shadow_ellipse.png" Stretch="UniformToFill" VerticalAlignment="Top"/>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <!-- Stats -->
                            <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Orientation="Vertical" Margin="10,20,10,0">
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="HEALTH" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,0"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="98/100" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,14" Opacity="0.75"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="EXPERIENCE" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,0"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="86/200" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,14" Opacity="0.75"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="ATTACK" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,0"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="24 (3)" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,14" Opacity="0.75"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="DEFENSE" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,0"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="10 (3)" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,14" Opacity="0.75"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="DURABILITY" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,0"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="8 (3)" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,14" Opacity="0.75"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- border -->
                    <Image Grid.Row="0" Grid.Column="1" Source="/Shared/ShellContent/window_horiz.png" Stretch="Fill" Margin="-5,0"/>
                    <Image Grid.Row="2" Grid.Column="1" Source="/Shared/ShellContent/window_horiz.png" Stretch="Fill" Margin="-5,0"/>
                    <Image Grid.Row="1" Grid.Column="0" Source="/Shared/ShellContent/window_vert.png" Stretch="Fill" Margin="0,-5"/>
                    <Image Grid.Row="1" Grid.Column="2" Source="/Shared/ShellContent/window_vert.png" Stretch="Fill" Margin="0,-5"/>

                    <Image Grid.Row="0" Grid.Column="0" Source="/Shared/ShellContent/window_corner.png"/>
                    <Image Grid.Row="0" Grid.Column="2" Source="/Shared/ShellContent/window_corner.png"/>
                    <Image Grid.Row="2" Grid.Column="0" Source="/Shared/ShellContent/window_corner.png"/>
                    <Image Grid.Row="2" Grid.Column="2" Source="/Shared/ShellContent/window_corner.png"/>
                </Grid>
            </Grid>
            
            <!-- Inventory -->
            <Grid x:Name="InventoryView" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="14"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="14"/>
                </Grid.RowDefinitions>
                
                <Rectangle Grid.Row="1" Grid.Column="1" Fill="#AEAEAE" Opacity="1.0" Margin="-4"/>
                <Rectangle Grid.Row="3" Grid.Column="1" Fill="#AEAEAE" Opacity="0.85" Margin="-4"/>

                <!-- block list -->
                <Grid Grid.Row="1" Grid.Column="1" Margin="6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="INVENTORY" Foreground="#212121" FontSize="24" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,-4,0,4"/>
                    <ListView Grid.Row="1"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                        ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                        ScrollViewer.HorizontalScrollMode="Enabled"
                        ScrollViewer.VerticalScrollMode="Disabled"
                        ScrollViewer.ZoomMode="Disabled"
                        Background="Transparent">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.Items>
                            <ListViewItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Rectangle Grid.Column="0" Margin="4,0,6,0" Fill="#212121" Opacity="1.0"/>
                                    <Rectangle Grid.Column="3" Margin="6,0,0,0" Fill="#212121" Opacity="1.0"/>

                                    <Rectangle Grid.Column="1" Fill="#212121" Width="36" Height="36" Opacity="1.00"/>
                                    <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Text="3" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Foreground="#AEAEAE" FontSize="20" FontWeight="Black" Margin="3,0,0,0"/>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Grid.Column="2" Grid.Row="1" Text="BLOCK No.1" Foreground="#212121" FontSize="14" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="10,0,0,4"/>
                                        <TextBlock Grid.Column="2" Grid.Row="1" Text="ATTACK +1" Foreground="#212121" FontSize="14" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="10,0,0,4"/>
                                    </StackPanel>
                                </Grid>
                            </ListViewItem>
                            <ListViewItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Rectangle Grid.Column="0" Margin="4,0,6,0" Fill="#212121" Opacity="1.0"/>
                                    <Rectangle Grid.Column="3" Margin="6,0,0,0" Fill="#212121" Opacity="1.0"/>

                                    <Rectangle Grid.Column="1" Fill="#212121" Width="36" Height="36" Opacity="0.75"/>
                                    <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Text="1" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Foreground="#AEAEAE" FontSize="20" FontWeight="Black" Margin="3,0,0,0"/>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Grid.Column="2" Grid.Row="1" Text="BLOCK No.2" Foreground="#212121" FontSize="14" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="10,0,0,4"/>
                                        <TextBlock Grid.Column="2" Grid.Row="1" Text="DEFENSE +1" Foreground="#212121" FontSize="14" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="10,0,0,4"/>
                                    </StackPanel>
                                </Grid>
                            </ListViewItem>
                            <ListViewItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Rectangle Grid.Column="0" Margin="4,0,6,0" Fill="#212121" Opacity="1.0"/>
                                    <Rectangle Grid.Column="3" Margin="6,0,0,0" Fill="#212121" Opacity="1.0"/>

                                    <Rectangle Grid.Column="1" Fill="#212121" Width="36" Height="36" Opacity="0.25"/>
                                    <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Text="7" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Foreground="#212121" FontSize="20" FontWeight="Black" Margin="3,0,0,0"/>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Grid.Column="2" Grid.Row="1" Text="BLOCK No.3" Foreground="#212121" FontSize="14" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="10,0,0,4"/>
                                        <TextBlock Grid.Column="2" Grid.Row="1" Text="HEALTH +5" Foreground="#212121" FontSize="14" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="10,0,0,4"/>
                                    </StackPanel>
                                </Grid>
                            </ListViewItem>
                            <ListViewItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Rectangle Grid.Column="0" Margin="4,0,6,0" Fill="#212121" Opacity="1.0"/>
                                    <Rectangle Grid.Column="3" Margin="6,0,0,0" Fill="#212121" Opacity="1.0"/>

                                    <Rectangle Grid.Column="1" Fill="#212121" Width="36" Height="36" Opacity="0.50"/>
                                    <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Text="3" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Foreground="#AEAEAE" FontSize="20" FontWeight="Black" Margin="3,0,0,0"/>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Grid.Column="2" Grid.Row="1" Text="BLOCK No.4" Foreground="#212121" FontSize="14" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="10,0,0,4"/>
                                        <TextBlock Grid.Column="2" Grid.Row="1" Text="DURABILITY +1" Foreground="#212121" FontSize="14" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="10,0,0,4"/>
                                    </StackPanel>
                                </Grid>
                            </ListViewItem>
                        </ListView.Items>
                    </ListView>
                </Grid>

                <!-- bot view -->
                <Grid Grid.Row="3" Grid.Column="1" Margin="-4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="50*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Bot -->
                        <Grid Grid.Row="1" Margin="10,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Grid.Resources>
                                    <Storyboard x:Name="inventoryBotBounceStoryboard">
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Y"
                                            Storyboard.TargetName="inventoryBotY"
                                            AutoReverse="True" To="-10" Duration="0:0:0.5" RepeatBehavior="Forever">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Opacity"
                                            Storyboard.TargetName="inventoryShadow"
                                            AutoReverse="True" From="1.00" To="0.75" Duration="0:0:0.5" RepeatBehavior="Forever">
                                        </DoubleAnimation>
                                        <DoubleAnimation
                                            Storyboard.TargetName="shrinkBoxL"
                                            Storyboard.TargetProperty="(Rectangle.Width)"
                                            EnableDependentAnimation="True"
                                            AutoReverse="True" From="70" To="100" Duration="0:0:0.5" RepeatBehavior="Forever">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation
                                            Storyboard.TargetName="shrinkBoxR"
                                            Storyboard.TargetProperty="Width"
                                            EnableDependentAnimation="True"
                                            AutoReverse="True" From="70" To="100" Duration="0:0:0.5" RepeatBehavior="Forever">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </Grid.Resources>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Rectangle Fill="Transparent" x:Name="shrinkBoxL" Height="30" Width="70" Grid.Column="0"/>
                                    <Rectangle Fill="Transparent" x:Name="shrinkBoxR" Height="30" Width="70" Grid.Column="2"/>
                                    <Image x:Name="inventoryShadow" Grid.Column="1" Source="/Shared/ShellContent/shadow_ellipse.png" Stretch="UniformToFill" VerticalAlignment="Top"/>
                                </Grid>
                                <Canvas x:Name="InventoryBotView" Grid.Row="0">
                                    <Canvas.RenderTransform>
                                        <TranslateTransform x:Name="inventoryBotY" Y="5"/>
                                    </Canvas.RenderTransform>
                                    <Rectangle x:Name="inventoryBot" Grid.Row="0" Fill="#212121" VerticalAlignment="Bottom" Width="100" Height="100"/>
                                </Canvas>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
                
                <Grid Grid.Column="1" Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.ColumnSpan="4" Fill="#AEAEAE" Margin="-4"/>
                    <!-- Stats -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="HP" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,0" TextAlignment="Center"/>
                        <TextBlock Text="+20" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,0" Opacity="0.75" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="ATT" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,0" TextAlignment="Center"/>
                        <TextBlock Text="+24" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,0" Opacity="0.75" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="DEF" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,0" TextAlignment="Center"/>
                        <TextBlock Text="+10" Foreground="#212121" FontSize="20" FontWeight="Black" FontFamily="/Shared/Fonts/pixelated.ttf#Pixelated" Margin="0,0,0,0" Opacity="0.75" TextAlignment="Center"/>
